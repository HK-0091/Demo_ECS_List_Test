doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        link(rel="stylesheet" href="./css/WS3006.css")
        script(src="https://code.jquery.com/jquery-latest.min.js")
        title WS3006 Document Pug
    body 
        main
            div(class="table_db")
                div(class="searchData")
                    input(type="number" placeholder="orderNo") 
                    button(id="orderNo_search") 조회
                div(class= "date_div")
                    label(for="startDate" class="startLabel") 시작날짜: 
                    input(type="date" id="startDate")
                    label(for="endDate" class="endLabel") 마지막날짜: 
                    input(type="date" id="endDate")
                    button(id="dateSearch_btn") 조회
                div(class= "db_div")
                    table 
                        thead 
                            tr
                                th(data-type = "number") orderNo 
                                th(data-type = "string") items 
                                th(data-type = "number") itemNo 
                                th(data-type = "number") lotNo 
                                th(data-type = "string") productDate 
                                th(data-type = "number") containerNo
                            tr
                        tbody 
        script(src="./js/WS3006.js")